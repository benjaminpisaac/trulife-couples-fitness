{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "dotnet publish -c Release -o out"
    },
    "deploy": {
        "startCommand": "dotnet out/TruLife.API.dll",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}